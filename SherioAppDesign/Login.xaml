<Page x:Class="SherioAppDesign.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SherioAppDesign"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Page.Resources>

        <!-- עיצוב שדות יפים -->
        <Style x:Key="ModernInput" TargetType="ContentControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">

                        <Border x:Name="border"
                                CornerRadius="12"
                                BorderThickness="1.5"
                                BorderBrush="#FFB8B8B8"
                                Background="White"
                                Padding="10"
                                SnapsToDevicePixels="True">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <materialDesign:PackIcon Kind="{TemplateBinding Tag}"
                                                         Width="22"
                                                         Height="22"
                                                         Foreground="#555"
                                                         VerticalAlignment="Center" />

                                <!-- Textbox / PasswordBox -->
                                <ContentPresenter Grid.Column="1"
                                                  VerticalAlignment="Center" />

                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- שינוי צבע כשמקבלים פוקוס -->
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#D94448" />
                                <Setter TargetName="border" Property="BorderThickness" Value="2" />
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Border CornerRadius="35">
        <Grid>

            <!-- גרדיאנט -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                    <GradientStop Color="#FFE63070" Offset="1" />
                    <GradientStop Color="#FFFE8704" Offset="0" />
                </LinearGradientBrush>
            </Grid.Background>

            <!-- עיגול לבן למעלה -->
            <Border Height="390"
                    VerticalAlignment="Top"
                    CornerRadius="0 0 180 0"
                    Background="#FFFFFF" />

            <StackPanel Orientation="Horizontal">

                <!-- Left image -->
                <StackPanel Width="350">
                    <Image Source="Images/HotelOfLogin.png"
                           Width="501"
                           Height="432"
                           Margin="30" />
                </StackPanel>

                <!-- Login controls -->
                <StackPanel Width="350">
                    <StackPanel Margin="20 40">

                        <TextBlock Text="התחברות"
                                   Margin="20"
                                   Foreground="Black"
                                   TextAlignment="Center"
                                   FontSize="38"
                                   FontFamily="/Resources/Noto/NotoSans-BoldItalic.ttf#Noto Sans" />

                        <!-- Username -->
                        <Border CornerRadius="12"
                                Background="White"
                                BorderThickness="1.5"
                                BorderBrush="#B8B8B8"
                                Padding="8"
                                Margin="10">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Kind="User"
                                                         Width="22"
                                                         Height="22"
                                                         Foreground="#555"
                                                         VerticalAlignment="Center" />

                                <TextBox x:Name="txtUsername"
                                         Grid.Column="1"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Foreground="Black"
                                         FontSize="15"
                                         materialDesign:HintAssist.Hint="Enter Username / Email"
                                         CaretBrush="#D94448" />
                            </Grid>

                        </Border>

                        <!-- Password -->
                        <Border CornerRadius="12"
                                Background="White"
                                BorderThickness="1.5"
                                BorderBrush="#B8B8B8"
                                Padding="8"
                                Margin="10">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Kind="Lock"
                                                         Width="22"
                                                         Height="22"
                                                         Foreground="#555"
                                                         VerticalAlignment="Center" />

                                <PasswordBox x:Name="txtPassword"
                                             Grid.Column="1"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Foreground="Black"
                                             FontSize="15"
                                             materialDesign:HintAssist.Hint="Password"
                                             CaretBrush="#D94448" />
                            </Grid>

                        </Border>

                        <!-- Login button -->
                        <StackPanel Margin="10" HorizontalAlignment="Center">
                            <Button Width="100"
                                    Height="40"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    BorderThickness="2"
                                    BorderBrush="#D94448"
                                    Background="#D94448"
                                    Foreground="White"
                                    ToolTip="Login"
                                    x:Name="btnLogin"
                                    Click="btnLogin_Click"
                                    Content="התחברות" />
                        </StackPanel>

                    </StackPanel>
                </StackPanel>

                <!-- Exit button -->
                <StackPanel Width="100">
                    <Button Margin="10 20"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            Background="{x:Null}"
                            ToolTip="Close"
                            x:Name="btnExit"
                            Click="btnExit_Click">

                        <materialDesign:PackIcon Kind="Close"
                                                 Foreground="Black"
                                                 Width="30"
                                                 Height="30" />
                    </Button>
                </StackPanel>

            </StackPanel>

        </Grid>
    </Border>

</Page>
