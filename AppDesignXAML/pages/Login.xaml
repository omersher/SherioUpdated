<Page x:Class="AppDesignXAML.pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      FlowDirection="RightToLeft"
      Title="Login">

    <Grid Width="800"
          Height="500"
          Background="#E5E7EB"
          HorizontalAlignment="Center"
          VerticalAlignment="Center">

        <Border CornerRadius="18"
                Background="White"
                ClipToBounds="True">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- שמאל – תמונה -->
                <Grid Grid.Column="0">
                    <Border Background="#66000000" >
                       
                     </Border>
                

                <Grid.Background>
                    <ImageBrush ImageSource="/Images/hotelLogin.jpg"
                        Stretch="UniformToFill"/>
                </Grid.Background>

                </Grid>

                <!-- ימין – טופס -->
                <StackPanel Grid.Column="1"
                            Margin="35"
                            VerticalAlignment="Center">

                    <TextBlock Text="ברוכים הבאים"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0 0 0 6"/>

                    <TextBlock Text="בבקשה הכנסו את הפרטים שלכם"
                               FontSize="13"
                               Foreground="#6B7280"
                               Margin="0 0 0 22"/>

                    <!-- אימייל -->
                    <TextBlock Text="אימייל"
                               FontSize="12"
                               Foreground="#374151"
                               Margin="0 0 0 4"/>

                    <TextBox x:Name="EmailBox"
                             Height="36"
                             Padding="10"
                             FontSize="13"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             Margin="0 0 0 14" TextChanged="EmailBox_TextChanged"/>

                    <!-- סיסמה -->
                    <TextBlock Text="סיסמה"
                               FontSize="12"
                               Foreground="#374151"
                               Margin="0 0 0 4"/>

                    <PasswordBox x:Name="PasswordBoxInput"
                                 Height="36"
                                 Padding="10"
                                 FontSize="13"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                               />

                    <!-- שגיאה -->
                    <TextBlock x:Name="PasswordErrorText"
                               Foreground="#DC2626"
                               FontSize="11"
                               Margin="2 6 0 0"
                               Visibility="Collapsed"/>

                    <!-- התחברות -->
                    <Button Content="התחברות"
                            Height="38"
                            Background="#111827"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            Margin="0 22 0 14"
                            Cursor="Hand"
                            Click="Login_Click"/>

                    <!-- הרשמה -->
                    <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

                        <TextBlock Text="אין לך משתמש?"
               FontSize="12"
               Foreground="#6B7280"
               VerticalAlignment="Center"
               Margin="0 0 6 0"/>

                        <Button Content="הרשמה"
            FontSize="12"
            Foreground="#2563EB"
            Background="Transparent"
            BorderThickness="0"
            Padding="0"
            VerticalAlignment="Center"
            Cursor="Hand"
            Click="Register_Click"/>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
