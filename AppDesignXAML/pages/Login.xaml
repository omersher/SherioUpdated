<Page x:Class="AppDesignXAML.pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="500"
      d:DesignWidth="800"
      FlowDirection="RightToLeft"
      Title="Login">

    <Grid Background="#F5F6F8">

        <!-- כרטיס מרכזי -->
        <Border Width="420"
                Padding="35"
                Background="White"
                CornerRadius="14"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderBrush="#E6E6E6"
                BorderThickness="1">

            <StackPanel>

                <!-- כותרת -->
                <TextBlock Text="התחברות"
                           FontSize="32"
                           FontWeight="SemiBold"
                           Foreground="#1F2937"
                           Margin="0 0 0 10"/>

                <TextBlock Text="היכנס כדי לנהל הזמנות ולמצוא דילים"
                           FontSize="14"
                           Foreground="#6B7280"
                           Margin="0 0 0 30"/>

                <!-- אימייל -->
                <TextBlock Text="אימייל"
                           FontSize="13"
                           Foreground="#374151"
                           Margin="0 0 0 6"/>

                <TextBox x:Name="EmailBox"
                         Height="42"
                         FontSize="14"
                         Padding="10"
                         Background="#F9FAFB"
                         BorderBrush="#D1D5DB"
                         BorderThickness="1"
                         Margin="0 0 0 18"/>

                <!-- סיסמה -->
                <TextBlock Text="סיסמה"
                           FontSize="13"
                           Foreground="#374151"
                           Margin="0 0 0 6"/>

                <PasswordBox x:Name="PasswordBoxInput"
                             Height="42"
                             FontSize="14"
                             Padding="10"
                             Background="#F9FAFB"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             Margin="0 0 0 25"/>

                <!-- כפתור התחברות -->
                <Button Content="התחבר"
                        Height="46"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="#E11D48"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0 0 0 18"
                        Click="Login_Click"/>

                <!-- לינקים -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">

                    <TextBlock Text="אין לך חשבון?"
                               Foreground="#6B7280"
                               FontSize="13"/>

                    <Button Content="הרשמה"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#E11D48"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="Register_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</Page>
