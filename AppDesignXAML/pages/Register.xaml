<Page x:Class="AppDesignXAML.pages.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      FlowDirection="RightToLeft"
      Width="800"
      
      Title="Register">
    <ScrollViewer VerticalScrollBarVisibility="Hidden"
                  HorizontalScrollBarVisibility="Disabled">

        <Grid Background="#F5F6F8">

            <!-- כרטיס הרשמה -->
            <Border Width="460"
                    Padding="35"
                    Background="White"
                    CornerRadius="14"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 40 0 40">

                <StackPanel>

                    <!-- כותרת -->
                    <TextBlock Text="הרשמה"
                               FontSize="30"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0 0 0 6"/>

                    <TextBlock Text="צור חשבון חדש"
                               FontSize="14"
                               Foreground="#6B7280"
                               Margin="0 0 0 30"/>

                    <!-- שם מלא -->
                    <TextBlock Text="שם מלא"
                               FontSize="13"
                               Foreground="#374151"/>
                    <TextBox x:Name="FullNameBox"
                             Height="42"
                             Margin="0 6 0 16"/>

                    <!-- תעודת זהות / דרכון -->
                    <TextBlock Text="תעודת זהות / דרכון"
                               FontSize="13"
                               Foreground="#374151"/>
                    <TextBox x:Name="GuestIdBox"
                             Height="42"
                             Margin="0 6 0 16"/>

                    <!-- אימייל -->
                    <TextBlock Text="אימייל"
                               FontSize="13"
                               Foreground="#374151"/>
                    <TextBox x:Name="EmailBox"
                             Height="42"
                             Margin="0 6 0 16"/>

                    <!-- טלפון -->
                    <TextBlock Text="טלפון"
                               FontSize="13"
                               Foreground="#374151"/>
                    <TextBox x:Name="PhoneBox"
                             Height="42"
                             Margin="0 6 0 16"/>

                    <!-- סיסמה -->
                    <TextBlock Text="סיסמה"
                               FontSize="13"
                               Foreground="#374151"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="42"
                                 Margin="0 6 0 28"/>

                    <!-- כפתור יצירת חשבון -->
                    <Button Content="צור חשבון"
                            Height="46"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Background="#E11D48"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CreateAccount_Click"/>

                </StackPanel>

            </Border>

        </Grid>

    </ScrollViewer>
</Page>
