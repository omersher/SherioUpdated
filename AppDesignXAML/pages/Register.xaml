    <Page x:Class="AppDesignXAML.pages.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      FlowDirection="RightToLeft"
      Width="800"
      Title="Register">
    <ScrollViewer VerticalScrollBarVisibility="Hidden"
                  HorizontalScrollBarVisibility="Disabled">

        <Grid Background="#F5F6F8">
            <Grid.RowDefinitions>
                <RowDefinition Height="97*"/>
                <RowDefinition Height="56*"/>
            </Grid.RowDefinitions>

            <Border Width="460"
                    Padding="35"
                    Background="White"
                    CornerRadius="14"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,40,0,0" Grid.RowSpan="2">

                <StackPanel>

                    <TextBlock Text="הרשמה"
                               FontSize="30"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0 0 0 6"/>

                    <TextBlock Text="צור חשבון חדש"
                               FontSize="14"
                               Foreground="#6B7280"
                               Margin="0 0 0 30"/>

                    <TextBlock Text="שם מלא"
                               FontSize="13"
                               Foreground="#374151"/>
                    <TextBox x:Name="FullNameBox"
                             Height="42"
                             Margin="0 6 0 16"/>

                    <TextBlock Text="תעודת זהות / דרכון"
                               FontSize="13"
                               Foreground="#374151"/>
                    <TextBox x:Name="GuestIdBox"
                             Height="42"
                             Margin="0 6 0 16"/>

                    <TextBlock Text="אימייל"
                               FontSize="13"
                               Foreground="#374151"/>
                    <TextBox x:Name="EmailBox"
                             Height="42"
                             Margin="0 6 0 16"/>

                    <TextBlock Text="טלפון"
                               FontSize="13"
                               Foreground="#374151"/>
                    <TextBox x:Name="PhoneBox"
                             Height="42"
                             Margin="0 6 0 16"/>

                    <TextBlock Text="סיסמה"
                               FontSize="13"
                               Foreground="#374151"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="42"
                                 Margin="0 6 0 28"/>

                    <Button Content="צור חשבון"
                            Height="46"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Background="#E11D48"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CreateAccount_Click"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0 22 0 0">

                        <TextBlock Text="כבר יש לך חשבון?"
                                   FontSize="12"
                                   Foreground="#6B7280"
                                   VerticalAlignment="Center"
                                   Margin="0 0 6 0"/>

                        <Button Content="התחברות"
                                FontSize="12"
                                Foreground="#2563EB"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                Click="Login_Click"/>
                    </StackPanel>

                </StackPanel>

            </Border>

        </Grid>

    </ScrollViewer>
</Page>