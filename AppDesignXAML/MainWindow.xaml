<Window x:Class="AppDesignXAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Width="800"
        Height="450">

    <Window.Resources>
        <!-- מסתיר ScrollBars בכל האפליקציה -->
        <Style TargetType="ScrollBar">
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>
    </Window.Resources>

    <Border Background="#0D1120" CornerRadius="5">

        
        <Grid>

            <!-- כפתור X צף מעל התוכן -->
            <Button Content="✕"
                    Width="32"
                    Height="32"
                    FontSize="20"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10"
                    Foreground="White"
                    Background="#00000033"
                    BorderThickness="0"
                    Cursor="Hand"
                    Panel.ZIndex="999"
                    Click="Exit_Click"/>

            <!-- התוכן של כל העמודים -->
            <Frame x:Name="MainFrame"
                   Source="pages/Home.xaml"
                   NavigationUIVisibility="Hidden"/>

        </Grid>

    </Border>
</Window>
